
#include "BindlessBuffers.ifx"
#include "Samplers.ifx"

//--------------------------------------------------------------------------------------
struct PS_INPUT
{
    float4 Pos : SV_POSITION;
    float3 Nor : NORMAL0;
    float2 Tex : TEXCOORD0;
    float3 WorldPos : TEXCOORD1;
};

ConstantBuffer<MeshResourceIndices> renderIndices : register(b0);

//--------------------------------------------------------------------------------------
// Pixel Shader
//--------------------------------------------------------------------------------------
float4 ps_main( PS_INPUT input) : SV_Target
{
    float3 vertexPos = input.WorldPos;
    float4 color;
    Texture2D<float4> shaderTextures = GetColorTexture(renderIndices.albedoMapIndex);
    float4 texColor = shaderTextures.Sample(linearWrapSampler, input.Tex);

    StructuredBuffer<MaterialConstants> materialConstants = GetBufferT<MaterialConstants>(renderIndices.materialIndex);
    StructuredBuffer<LightParameters> lightDataBuffer = GetBufferT<LightParameters>(renderIndices.LightBufferIndex);
    uint NumberOfLights = renderIndices.NumberOfLights;
	
    float3 nnormal = normalize(input.Nor);
    float3 nviewdirection = normalize(lightDataBuffer[0].camera_position - vertexPos);

    Texture3D<float4> cubeTexture = GetCubeTexture(renderIndices.cubeReflectionIndex );
    float4 cubeTextureColor = cubeTexture.Sample(linearWrapSampler,  refract(nnormal, nviewdirection, 0.99)) *0.75;
    float4 relfectColor = cubeTexture.Sample(linearWrapSampler,  reflect(nnormal, nviewdirection));
    color = float4(materialConstants[0].ambient.rgb, 1.0) * cubeTextureColor + float4(materialConstants[0].emissive.rgb, 0.0);
    for (int counter = 0; counter < NumberOfLights; ++counter)
    {        
        float3 lightDir = normalize(lightDataBuffer[0].m_lights[counter].m_position.xyz - vertexPos);
        float ndotl = dot(nnormal, -lightDir);
        float3 reflection = normalize(((2.0 * nnormal) * ndotl) - lightDir);
        float rdotv = pow(saturate(dot(reflection, nviewdirection)), materialConstants[0].shininess);
        if (ndotl > 0.0)
        {
            color = color + (lightDataBuffer[0].m_lights[counter].m_diffuse * ndotl * (cubeTextureColor * float4(materialConstants[0].diffuse.rgb, 1.0)));// + rdotv;
        }
    }
    
    //color.rgb = nnormal;
    //color.a = texColor.a;
    return saturate(color);
}