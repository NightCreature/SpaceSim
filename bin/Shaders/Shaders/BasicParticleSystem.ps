#include "BindlessBuffers.ifx"
#include "Samplers.ifx"

struct PSInput
{
    float4 Pos : SV_POSITION;
    float2 Tex : TEXCOORD0;
    uint textureIndex : TEXCOORD1;
};


float4 ps_main(PSInput input) : SV_Target
{
	//return float4(input.Tex,0,1);
    Texture2D<float4> albedo = GetColorTexture(input.textureIndex);
	return albedo.Sample(linearWrapSampler, input.Tex);
}