#include "BindlessBuffers.ifx"
#include "CommonStructures.ifx"
#include "rootsignatures.ifx"
#include "Samplers.ifx"

ConstantBuffer<MeshResourceIndices> resourceIndices : register(b0);
//--------------------------------------------------------------------------------------
// Constant Buffer Variables
//--------------------------------------------------------------------------------------

//--------------------------------------------------------------------------------------
struct PS_INPUT
{
    float4 Pos : SV_POSITION;
    float3 Nor : NORMAL0;
    float3 WorldPos : TEXCOORD1;
};

//--------------------------------------------------------------------------------------
// Pixel Shader
//--------------------------------------------------------------------------------------
float4 ps_main( PS_INPUT input) : SV_Target
{
    float3 vertexPos = input.WorldPos;
    float4 color;

    float4 texColor = float4(1,1,1,1); //shaderTextures.Sample(SampleType, input.Tex);
    float3 nnormal = normalize(input.Nor);
    Texture2D<float4> shaderTextures = GetColorTexture(resourceIndices.albedoMapIndex);
    StructuredBuffer<MaterialConstants> materialConstants = GetBufferT<MaterialConstants>(resourceIndices.materialIndex);
    StructuredBuffer<LightParameters> lightDataBuffer = GetBufferT<LightParameters>(resourceIndices.LightBufferIndex);

    float3 nviewdirection = normalize(lightDataBuffer[0].camera_position - vertexPos);
    color = float4(materialConstants[0].ambient.rgb, 1.0) * texColor + float4(materialConstants[0].emissive.rgb, 0.0);
    for (int counter = 0; counter < 8; ++counter)
    {
        float3 lightDir = lightDataBuffer[0].m_lights[counter].m_position.xyz - vertexPos;
        float distance = length(lightDir);
        if (distance <= lightDataBuffer[0].m_lights[counter].m_range.x )
        {
            float attenuation = clamp(0.0, 1.0, 1.0 / (lightDataBuffer[0].m_lights[counter].m_attenuationFallOff.x + lightDataBuffer[0].m_lights[counter].m_attenuationFallOff.y * distance + lightDataBuffer[0].m_lights[counter].m_attenuationFallOff.z * distance * distance));

            lightDir = normalize(lightDir);
            float ndotl = dot(nnormal, -lightDir);
            float3 reflection = normalize(((2.0 * nnormal) * ndotl) - lightDir);
            float rdotv = pow(saturate(dot(reflection, nviewdirection)), materialConstants[0].shininess);
            if (ndotl > 0.0)
            {
                color = color + (lightDataBuffer[0].m_lights[counter].m_diffuse * ndotl * (texColor * float4(materialConstants[0].diffuse.rgb, 1.0))) * attenuation + rdotv * lightDataBuffer[0].m_lights[counter].m_specular;
            }
        }
    }
    //color.rgb = nnormal;
    //color.a = texColor.a;
    return saturate(color);
}