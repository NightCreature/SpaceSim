<xml>
  <Effect >
    <Technique name="default">
      <VertexShader entry_point="vs_main" file_name="Shaders\Shaders\simple_vertex_shader.vs" shader_type="0" />
      <PixelShader entry_point="ps_main" file_name="Shaders\Shaders\simple_pixel_shader.ps" shader_type="4" />
      <VertexDeclarationDescriptor position_dimension="3" normal="true" tangent="true" vertex_color="false" textureCoordsDimensions="2" />
  	</Technique>
    <Technique name="shadow_map">
      <VertexShader entry_point="vs_main" file_name="Shaders\Shaders\simple_shadow_vertex_shader.vs" shader_type="0" />
      <PixelShader entry_point="ps_main" file_name="Shaders\Shaders\simple_shadow_pixel_shader.ps" shader_type="4" />
      <BlendState  alphablend="1"/>
      <RasterState Cullmode="3" FillMode="3" FrontCCW="1" />
      <DepthStencilState depth_enabled="1" stencil_enabled="0" />
      <VertexDeclarationDescriptor position_dimension="3" normal="true" tangent="true" vertex_color="false" textureCoordsDimensions="2" /> <!--This needs optimising we only really need the vertex stream here-->
      <PrimitiveType type="3" />
  	</Technique>
  </Effect>
</xml>